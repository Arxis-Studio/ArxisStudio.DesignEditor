<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DesignEditor.Demo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:arxisStudio="clr-namespace:ArxisStudio;assembly=ArxisStudio.DesignEditor"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesignEditor.Demo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DesignEditor.Demo">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
    <Color x:Key="BackgroundColor">#141417</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />

    <SolidColorBrush x:Key="SmallLineBrush" Color="#26292E" />
    <SolidColorBrush x:Key="LargeLineBrush" Color="#3E4451" />

    <DrawingGroup x:Key="UnifiedGridDrawing">
        <GeometryDrawing Brush="{StaticResource BackgroundBrush}">
            <GeometryDrawing.Geometry>
                <RectangleGeometry Rect="0,0,100,100" />
            </GeometryDrawing.Geometry>
        </GeometryDrawing>

        <GeometryDrawing Brush="{x:Null}">
            <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource SmallLineBrush}" Thickness="1" />
            </GeometryDrawing.Pen>
            <GeometryDrawing.Geometry>
                <GeometryGroup>
                    <LineGeometry StartPoint="20,0" EndPoint="20,100" />
                    <LineGeometry StartPoint="40,0" EndPoint="40,100" />
                    <LineGeometry StartPoint="60,0" EndPoint="60,100" />
                    <LineGeometry StartPoint="80,0" EndPoint="80,100" />

                    <LineGeometry StartPoint="0,20" EndPoint="100,20" />
                    <LineGeometry StartPoint="0,40" EndPoint="100,40" />
                    <LineGeometry StartPoint="0,60" EndPoint="100,60" />
                    <LineGeometry StartPoint="0,80" EndPoint="100,80" />
                </GeometryGroup>
            </GeometryDrawing.Geometry>
        </GeometryDrawing>

        <GeometryDrawing Brush="{x:Null}">
            <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource LargeLineBrush}" Thickness="1" />
            </GeometryDrawing.Pen>
            <GeometryDrawing.Geometry>
                <StreamGeometry>M0,0 L100,0 M0,0 L0,100</StreamGeometry>
            </GeometryDrawing.Geometry>
        </GeometryDrawing>
    </DrawingGroup>

    <DrawingBrush x:Key="DesignEditorGridBrush"
                  TileMode="Tile"
                  DestinationRect="0 0 100 100"
                  Transform="{Binding DpiScaledViewportTransform, ElementName=Editor}"
                  Drawing="{StaticResource UnifiedGridDrawing}" />
</Window.Resources>


    <Grid Background="{StaticResource BackgroundBrush}">

        <arxisStudio:DesignEditor x:Name="Editor"
                                 Background="{StaticResource DesignEditorGridBrush}">

            <Canvas >

                <Border Canvas.Left="400" Canvas.Top="300"
                        Width="340"
                        Background="#202020" BorderBrush="#383838" BorderThickness="1"
                        CornerRadius="12" Padding="30"
                        BoxShadow="0 10 20 0 #50000000">

                    <StackPanel Spacing="20">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Please sign in to continue" FontSize="14" Foreground="#888888" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <TextBox Watermark="Email address" CornerRadius="6" Height="35" Background="#2D2D2D" BorderBrush="#404040" Foreground="White"/>
                            <TextBox Watermark="Password" PasswordChar="â€¢" CornerRadius="6" Height="35" Background="#2D2D2D" BorderBrush="#404040" Foreground="White"/>
                        </StackPanel>

                        <Grid ColumnDefinitions="Auto, *">
                            <CheckBox Grid.Column="0" Content="Remember me" Foreground="#AAAAAA" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="Forgot Password?" Foreground="#4C97FF" Cursor="Hand" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <Button Content="Sign In" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Height="40" CornerRadius="6" Background="#4C97FF" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>

                        <Grid ColumnDefinitions="*,Auto,*" VerticalAlignment="Center">
                            <Separator Grid.Column="0" Background="#444" Height="1"/>
                            <TextBlock Grid.Column="1" Text="OR" Foreground="#666" FontSize="10" Margin="10,0"/>
                            <Separator Grid.Column="2" Background="#444" Height="1"/>
                        </Grid>

                        <Button Content="Sign in with GitHub" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Height="35" CornerRadius="6" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="1" Foreground="#CCCCCC"/>
                    </StackPanel>
                </Border>

                <Border Canvas.Left="800" Canvas.Top="300"
                        Width="700" Height="500"
                        Background="#202020" BorderBrush="#383838" BorderThickness="1"
                        CornerRadius="12" ClipToBounds="True"
                        BoxShadow="0 10 20 0 #50000000">

                    <Grid RowDefinitions="Auto, *">
                        <Border Grid.Row="0" Background="#252526" Padding="20,15" BorderBrush="#303030" BorderThickness="0,0,0,1">
                            <Grid ColumnDefinitions="Auto, *, Auto">
                                <TextBlock Grid.Column="0" Text="MyApp Dashboard" FontWeight="Bold" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                                <Border Grid.Column="1" Margin="30,0" Background="#1A1A1A" CornerRadius="4" Height="30" Padding="10,0">
                                    <TextBlock Text="Search..." Foreground="#555" VerticalAlignment="Center" FontSize="13"/>
                                </Border>
                                <Ellipse Grid.Column="2" Width="32" Height="32" Fill="#4C97FF"/>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1" ColumnDefinitions="180, *">
                            <Border Grid.Column="0" Background="#1B1B1B" Padding="15">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="MAIN" Foreground="#555" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Border Background="#304C97FF" CornerRadius="4" Padding="10,8">
                                        <TextBlock Text="Overview" Foreground="#4C97FF" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Padding="10,8"><TextBlock Text="Analytics" Foreground="#999"/></Border>
                                    <Border Padding="10,8"><TextBlock Text="Projects" Foreground="#999"/></Border>
                                    <Border Padding="10,8"><TextBlock Text="Settings" Foreground="#999"/></Border>
                                </StackPanel>
                            </Border>

                            <ScrollViewer Grid.Column="1" Padding="25">
                                <StackPanel Spacing="25">
                                     <TextBlock Text="Today's Overview" FontSize="20" FontWeight="SemiBold" Foreground="White"/>

                                    <Grid ColumnDefinitions="*,*,*" ShowGridLines="False">
                                        <Grid.Styles>
                                            <Style Selector="Border.statCard">
                                                <Setter Property="Background" Value="#2D2D2D"/>
                                                <Setter Property="CornerRadius" Value="8"/>
                                                <Setter Property="Padding" Value="20"/>
                                                <Setter Property="Margin" Value="0,0,15,0"/>
                                            </Style>
                                        </Grid.Styles>

                                        <Border Grid.Column="0" Classes="statCard">
                                            <StackPanel Spacing="5">
                                                <TextBlock Text="Total Users" Foreground="#888" FontSize="13"/>
                                                <TextBlock Text="14,520" Foreground="White" FontSize="26" FontWeight="Bold"/>
                                                <TextBlock Text="+12% from last week" Foreground="#4C97FF" FontSize="12"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Column="1" Classes="statCard">
                                            <StackPanel Spacing="5">
                                                <TextBlock Text="Revenue" Foreground="#888" FontSize="13"/>
                                                <TextBlock Text="$4,300" Foreground="White" FontSize="26" FontWeight="Bold"/>
                                                <TextBlock Text="+5% today" Foreground="#4C97FF" FontSize="12"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Grid.Column="2" Classes="statCard" Margin="0">
                                            <StackPanel Spacing="5">
                                                <TextBlock Text="Active Now" Foreground="#888" FontSize="13"/>
                                                <TextBlock Text="342" Foreground="White" FontSize="26" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <Border Background="#2D2D2D" CornerRadius="8" Height="200" Padding="20">
                                        <TextBlock Text="Recent Activity Graph Placeholder" Foreground="#555" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>

                <Line StartPoint="740,450" EndPoint="800,450" Stroke="#3E4451" StrokeThickness="2" StrokeDashArray="4,4"/>
                <Polygon Points="800,450 790,445 790,455" Fill="#3E4451" Canvas.Left="0" Canvas.Top="0"/>

            </Canvas>

        </arxisStudio:DesignEditor>
    </Grid>

</Window>
